<% if flash[:notice] %>
	<div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
<% end %>

<table class="table table-bordered">
	<thead class="thead-dark">
		<tr>
			<th scope="col">Nombre</th>
			<th scope="col">Descripcion</th>
			<th scope="col">Precio</th>
			<th scope="col">Cantidad</th>
			<th scope="col">Opciones</th>
		</tr>
	</thead>
	<tbody>
		<!--<% todos = Producto.order :nombre %>-->
		<% @productos_por_nombre.each do |producto| %>
		<tr>
			<td><%= producto.nombre %></td>
			<td><%= producto.descripcion %></td>
			<td><%= producto.precio %></td>
			<td><%= producto.cantidad %></td>
			<!--<td><a href="/productos/<%= producto.id %>/delete">Delete</a></td>-->
			<td>
				<!--<%= link_to "Delete", producto, method: :delete %>-->
				<%= button_to "Delete", producto, 
										method: :delete,
										class: "btn btn-danger",
										data: { confirm: "Estas seguro que deseas borrar #{producto.nombre}?"}
										 %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= link_to "Crear un nuevo producto", new_producto_path %>
